<theme>
    <formatVersion>6</formatVersion>
	
	<include>./../theme.xml</include>
		
	<view name="grid">	
		<imagegrid name="gamegrid">
			<pos>0.0 0.114</pos>
			<size>1.0 0.52</size>
			<margin>0.0122 0.0</margin>
			<scrollDirection>horizontal</scrollDirection>
			<folderImage>./folder.png</folderImage>
		</imagegrid>
		<gridtile name="default">
			<size>0.19 0.52</size>
			<padding>70 80</padding>
			<backgroundImage>./tile.png</backgroundImage>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>ffffff</backgroundColor>
			<imageColor>ffffff</imageColor>
		</gridtile>
		<gridtile name="selected">
			<size>0.19 0.52</size>
			<backgroundImage>./tile-selected.png</backgroundImage>
			<backgroundColor>ffffff</backgroundColor>
		</gridtile>				
	</view>

</theme>